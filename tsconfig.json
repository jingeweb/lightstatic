{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "alwaysStrict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "noEmit": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["src/**/*"]
}
